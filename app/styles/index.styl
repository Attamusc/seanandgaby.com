@import 'common'
@import 'nib'

taupe = #CDC1B1

header
    margin-top 10px
    margin-bottom 15px

.header-text
    width 320px
    margin-right 20px
    float left
    p
        height 100px
        text-align right
        font-size 60px
        font-weight 100

header > img
    float left

ul.nav
    padding 0px
    margin-bottom 0px
    li
        a
            color #888888
        a:hover
            background-color lighten(taupe, 40%)
        &.active a, &.active a:hover
            background-color taupe
            color darken(taupe, 50%)

.main
    border-bottom-right-radius 10px
    border-bottom-left-radius 10px
    border-top-right-radius 10px
    border-right 1px solid #DDD
    border-left 1px solid #DDD
    border-bottom 1px solid #DDD
    margin 0px
    padding 20px
    background taupe

blockquote
    margin-top 35px
    p
        font-size 46px
        line-height 48px
        font-weight 100
    small
        font-size 20px
        line-height 22px
        color #666666

footer
    margin-top 10px
    font-size 14px
    text-align right
    a, a:hover, a:visited
        color: #2D81C5
        text-decoration none
