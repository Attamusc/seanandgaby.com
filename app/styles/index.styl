@import 'common'
@import 'nib'

taupe = #CDC1B1

#count
  color red;
  font-weight 100

header
  margin-top 30px
  margin-bottom 50px

  img
    position relative
    top 4px

.header-text p
  text-align right
  font-size 60px
  line-height 60px
  font-weight 100
  margin 0

  &:first-child
    margin-bottom 40px

  &:last-child
    margin-top 40px

ul.nav
  margin-left auto
  margin-right auto
  width 754px
  padding 0
  margin-bottom 0
  li
    font-size 20px
    font-weight 300
    a
      padding 15px 30px
      color #888888
    a:hover
      background-color lighten(taupe, 40%)
    &.active a, &.active a:hover
      background-color taupe
      color darken(taupe, 50%)

.main
  border-radius 10px
  border-right 1px solid #DDD
  border-left 1px solid #DDD
  border-bottom 1px solid #DDD
  margin 0px
  padding 40px
  background linear-gradient(top, taupe, darken(taupe, 10%))
  & > div
    font-size 18px
    font-weight 300
    &:not(.active)
      display none
    h2
      text-align center
      font-weight 100
      font-size 40px
      margin-bottom 30px

#wedding-info p
  text-align center

blockquote
  margin-top 30px
  margin-bottom 0
  border-left 0 solid #FFFFFF
  p
    font-size 46px
    line-height 48px
    font-weight 100
  small
    font-size 20px
    line-height 22px
    color #666666

footer
  margin-top 10px
  font-size 14px
  text-align right
  a, a:hover, a:visited
    color: #2D81C5
    text-decoration none
